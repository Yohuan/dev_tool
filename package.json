{
  "scripts": {
    "test": "jest --color",
    "test:watch": "jest --watch --color",
    "test:coverage": "jest --coverage --color"
  },
  "jest": {
    "testRegex": ".*(\\.)(test)\\.js$",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverageFrom": [
      "./lib/**/*.js"
    ],
    "coverageDirectory": "./jest/coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "chalk": "^3.0.0",
    "chokidar": "^3.4.0",
    "simple-git": "^1.131.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.5.3",
    "jest-extended": "^0.11.5"
  }
}
